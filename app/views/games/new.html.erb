<h1>Games</h1>

<div class="container">
  <div class="row justify-content-between">
    <% @grid.each do |letter|%>
      <span class="col-1 text-center p-5 border border-black">
        <%= letter %>
      </span>
    <% end %>
  </div>
</div>

<div class="container my-5">
  <div class="row justify-content-start">
    <form action="score" method="post" data-turbo="false" class="input-group mb-3 col-4">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input id="grid" name="grid" type="hidden" value="<%= @grid %>" />
      <input type="text" name="word" class="form-control">
      <input type="submit" value="Play" class="btn btn-primary">
    </form>
  </div>
</div>
